<Window x:Class="InfertilityCare.ReportProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityCare"
        mc:Ignorable="d"
        Title="Report Progress" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f7f9fc">
    <Canvas>
        <!-- Eggs Gained -->
        <Label Content="Eggs Gained" Canvas.Left="43" Canvas.Top="13"/>
        <ScrollViewer Canvas.Left="43" Canvas.Top="44" Height="140" Width="286" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgEggs"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              AlternatingRowBackground="#E3F2FD"
              HeadersVisibility="Column"
              RowHeight="40"
              ColumnHeaderHeight="40"
              FontSize="14"
              BorderBrush="#B0BEC5"
              BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" Width="70"/>
                    <DataGridTextColumn Header="Date Gained" Binding="{Binding DateGained}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <!-- Embryos Gained -->
        <Label Content="Embryos Gained" Canvas.Left="43" Canvas.Top="201"/>
        <ScrollViewer Canvas.Left="43" Canvas.Top="232" Height="140" Width="705" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgEmbryos"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              AlternatingRowBackground="#E3F2FD"
              HeadersVisibility="Column"
              RowHeight="40"
              ColumnHeaderHeight="40"
              FontSize="14"
              BorderBrush="#B0BEC5"
              BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" Width="70"/>
                    <DataGridTextColumn Header="Egg Grade" Binding="{Binding EggGained.Grade}" Width="140"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="140"/>
                    <DataGridTextColumn Header="Frozen Storage" Binding="{Binding IsFrozen}" Width="140"/>
                    <DataGridTextColumn Header="Date Gained" Binding="{Binding DateGained}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <!-- Embryos Transfer -->
        <Label Content="Embryos Transfer" Canvas.Left="43" Canvas.Top="421"/>
        <ScrollViewer Canvas.Left="43" Canvas.Top="452" Height="160" Width="476" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgEmbryosTransfer"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              AlternatingRowBackground="#E3F2FD"
              HeadersVisibility="Column"
              RowHeight="40"
              ColumnHeaderHeight="40"
              FontSize="14"
              BorderBrush="#B0BEC5"
              BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Embyro Grade" Binding="{Binding EmbryoGained.Grade}" Width="120"/>
                    <DataGridTextColumn Header="TransferDate" Binding="{Binding TransferDate}" Width="140"/>
                    <DataGridTextColumn Header="Frozen" Binding="{Binding EmbryoGained.IsFrozen}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

    </Canvas>
</Window>
