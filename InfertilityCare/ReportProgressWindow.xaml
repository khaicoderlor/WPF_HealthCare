<Window x:Class="InfertilityCare.ReportProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityCare"
        mc:Ignorable="d"
        Title="Report Progress" Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#f7f9fc">
    <Border Margin="20" Padding="20" Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="10" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total of eggs -->
            <Label Grid.Row="0" Grid.Column="0" Content="🟡 Total of eggs:" 
                   VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtNumberOfEgg" Grid.Row="0" Grid.Column="1" 
                       FontSize="14" VerticalAlignment="Center" Foreground="#2e6da4" Margin="10,5"/>

            <!-- Number of embryos -->
            <Label Grid.Row="1" Grid.Column="0" Content="🧬 Number of embryos:" 
                   VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtNumberEmbryo" Grid.Row="1" Grid.Column="1" 
                       FontSize="14" VerticalAlignment="Center" Foreground="#2e6da4" Margin="10,5"/>

            <!-- Number of embryos frozen -->
            <Label Grid.Row="2" Grid.Column="0" Content="❄️ Frozen embryos:" 
                   VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtNumberFrozenEmbryo" Grid.Row="2" Grid.Column="1" 
                       FontSize="14" VerticalAlignment="Center" Foreground="#2e6da4" Margin="10,5"/>

            <!-- Number of embryos transferred -->
            <Label Grid.Row="3" Grid.Column="0" Content="🚚 Transferred embryos:" 
                   VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtNumberTransferEmbryo" Grid.Row="3" Grid.Column="1" 
                       FontSize="14" VerticalAlignment="Center" Foreground="#2e6da4" Margin="10,5"/>
        </Grid>
    </Border>
</Window>
