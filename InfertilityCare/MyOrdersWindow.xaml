<Window x:Class="InfertilityCare.MyOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch sử đơn khám của tôi" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Lịch sử đơn khám"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#37474F"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Bảng danh sách đơn khám -->
        <DataGrid x:Name="dgOrders"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#E3F2FD"
                  HeadersVisibility="Column"
                  RowHeight="40"
                  ColumnHeaderHeight="40"
                  FontSize="14"
                  BorderBrush="#B0BEC5"
                  BorderThickness="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Dịch vụ" Binding="{Binding ServiceName}" Width="*"/>
                <DataGridTextColumn Header="Bác sĩ" Binding="{Binding DoctorName}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Ngày bắt đầu" Binding="{Binding StartDate}" Width="*"/>
                <DataGridTextColumn Header="Ngày kết thúc" Binding="{Binding EndDate}" Width="*"/>
                <DataGridTemplateColumn Header="Chi tiết" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xem chi tiết"
                                    Padding="5,2"
                                    Background="#0288D1"
                                    Foreground="White"
                                    BorderBrush="#0277BD"
                                    Cursor="Hand"
                                    Click="ViewDetails_Click"
                                    Tag="{Binding Id}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
