<Window x:Class="InfertilityCare.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Window" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Treatment Booking" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <!-- Service -->
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Treatment Service:"/>
            <ComboBox x:Name="cbService" DisplayMemberPath="Name" SelectedValuePath="Id" Width="250"/>
        </StackPanel>

        <!-- Doctor -->
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Doctor:"/>
            <ComboBox x:Name="cbDoctor" DisplayMemberPath="FullName" SelectedValuePath="Id" Width="250"/>
        </StackPanel>

        <!-- Date -->
        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="First Appointment Date:"/>
            <DatePicker x:Name="dpDate" Width="250"/>
        </StackPanel>

        <!-- Frozen Embryo Checkbox -->
        <CheckBox x:Name="chkFrozen" Grid.Row="4" Margin="0,10,0,0" Visibility="Collapsed">
            Include embryo freezing service
        </CheckBox>

        <!-- Button -->
        <Button Content="Book Appointment" 
                Width="200" 
                Height="35" 
                Margin="0,20,0,0" 
                Grid.Row="5"
                HorizontalAlignment="Center"
                Click="BtnBooking_Click"/>
    </Grid>
</Window>
