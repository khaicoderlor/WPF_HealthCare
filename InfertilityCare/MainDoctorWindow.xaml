<Window x:Class="InfertilityCare.MainDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityCare"
        mc:Ignorable="d"
        Title="Doctor Dashboard" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
            <StackPanel Margin="15">

                <!-- Header -->
                <TextBlock Text="Doctor Portal" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         Foreground="#333333" 
                         HorizontalAlignment="Center"
                         Margin="0,10,0,20"/>

                <!-- Navigation Buttons -->
                <Button Background="#2196F3" 
                      Foreground="White" 
                      Padding="10,8" 
                      BorderThickness="0" 
                      Margin="0,2"
                      HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊" Margin="0,0,8,0"/>
                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" 
                      Foreground="#333333" 
                      Padding="10,8" 
                      BorderThickness="0" 
                      Margin="0,2"
                      HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" Margin="0,0,8,0"/>
                        <TextBlock Text="My Patients"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" 
                      Foreground="#333333" 
                      Padding="10,8" 
                      BorderThickness="0" 
                      Margin="0,2"
                      HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📈" Margin="0,0,8,0"/>
                        <TextBlock Text="Reports"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" 
                      Foreground="#333333" 
                      Padding="10,8" 
                      BorderThickness="0" 
                      Margin="0,2"
                      HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📅" Margin="0,0,8,0"/>
                        <TextBlock Text="Appointments"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" 
                      Foreground="#333333" 
                      Padding="10,8" 
                      BorderThickness="0" 
                      Margin="0,2"
                      HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💊" Margin="0,0,8,0"/>
                        <TextBlock Text="Treatments"/>
                    </StackPanel>
                </Button>

                <!-- Separator -->
                <Rectangle Height="1" Fill="#CCCCCC" Margin="0,20,0,10"/>

                <!-- Bottom Buttons -->
                <Button Background="Transparent" 
                      Foreground="#333333" 
                      Padding="10,8" 
                      BorderThickness="0" 
                      Margin="0,2"
                      HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" Margin="0,0,8,0"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" 
                      Foreground="#333333" 
                      Padding="10,8" 
                      BorderThickness="0" 
                      Margin="0,2"
                      HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🚪" Margin="0,0,8,0"/>
                        <TextBlock Text="Logout"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Dashboard" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Foreground="#333333"/>
                <TextBlock Text="Welcome back, Dr. Smith" 
                         FontSize="12" 
                         Foreground="#666666" 
                         Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Stats Cards -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                              Background="White" 
                              BorderBrush="#DDDDDD" 
                              BorderThickness="1" 
                              Padding="15" 
                              Margin="5">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="👥" FontSize="18"/>
                                <TextBlock Text="156" FontSize="20" FontWeight="Bold" Foreground="#2196F3" Margin="0,5,0,0"/>
                                <TextBlock Text="Total Patients" FontSize="10" Foreground="#666666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" 
                              Background="White" 
                              BorderBrush="#DDDDDD" 
                              BorderThickness="1" 
                              Padding="15" 
                              Margin="5">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="⚡" FontSize="18"/>
                                <TextBlock Text="89" FontSize="20" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0"/>
                                <TextBlock Text="Active Cases" FontSize="10" Foreground="#666666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" 
                              Background="White" 
                              BorderBrush="#DDDDDD" 
                              BorderThickness="1" 
                              Padding="15" 
                              Margin="5">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="📅" FontSize="18"/>
                                <TextBlock Text="8" FontSize="20" FontWeight="Bold" Foreground="#FF9800" Margin="0,5,0,0"/>
                                <TextBlock Text="Today" FontSize="10" Foreground="#666666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" 
                              Background="White" 
                              BorderBrush="#DDDDDD" 
                              BorderThickness="1" 
                              Padding="15" 
                              Margin="5">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="⭐" FontSize="18"/>
                                <TextBlock Text="82%" FontSize="20" FontWeight="Bold" Foreground="#9C27B0" Margin="0,5,0,0"/>
                                <TextBlock Text="Success Rate" FontSize="10" Foreground="#666666"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recent Activity -->
                    <Border Background="White" 
                          BorderBrush="#DDDDDD" 
                          BorderThickness="1" 
                          Padding="15" 
                          Margin="5,0,5,20">
                        <StackPanel>
                            <TextBlock Text="Recent Activity" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     Foreground="#333333" 
                                     Margin="0,0,0,15"/>

                            <StackPanel>
                                <Border Background="#F5F5F5" Padding="10" Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="👤" FontSize="14" Margin="0,0,10,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="New patient consultation" FontSize="12" FontWeight="Bold"/>
                                            <TextBlock Text="Sarah Johnson - Initial assessment" FontSize="10" Foreground="#666666"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="5 min ago" FontSize="10" Foreground="#999999"/>
                                    </Grid>
                                </Border>

                                <Border Background="#F5F5F5" Padding="10" Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="📋" FontSize="14" Margin="0,0,10,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Lab results received" FontSize="12" FontWeight="Bold"/>
                                            <TextBlock Text="Michael Davis - Blood work complete" FontSize="10" Foreground="#666666"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="20 min ago" FontSize="10" Foreground="#999999"/>
                                    </Grid>
                                </Border>

                                <Border Background="#F5F5F5" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="💊" FontSize="14" Margin="0,0,10,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Treatment updated" FontSize="12" FontWeight="Bold"/>
                                            <TextBlock Text="Emma Wilson - Medication adjusted" FontSize="10" Foreground="#666666"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="1 hour ago" FontSize="10" Foreground="#999999"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <Border Background="White" 
                          BorderBrush="#DDDDDD" 
                          BorderThickness="1" 
                          Padding="15" 
                          Margin="5">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     Foreground="#333333" 
                                     Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <Button Background="#2196F3" 
                                          Foreground="White" 
                                          Padding="10,8" 
                                          BorderThickness="0" 
                                          Margin="0,0,0,5"
                                          HorizontalAlignment="Stretch">
                                        <TextBlock Text="➕ Add Patient"/>
                                    </Button>

                                    <Button Background="#4CAF50" 
                                          Foreground="White" 
                                          Padding="10,8" 
                                          BorderThickness="0" 
                                          HorizontalAlignment="Stretch">
                                        <TextBlock Text="📅 Schedule"/>
                                    </Button>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <Button Background="#FF9800" 
                                          Foreground="White" 
                                          Padding="10,8" 
                                          BorderThickness="0" 
                                          Margin="0,0,0,5"
                                          HorizontalAlignment="Stretch">
                                        <TextBlock Text="📊 Report"/>
                                    </Button>

                                    <Button Background="#9C27B0" 
                                          Foreground="White" 
                                          Padding="10,8" 
                                          BorderThickness="0" 
                                          HorizontalAlignment="Stretch">
                                        <TextBlock Text="💊 Treatment"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>