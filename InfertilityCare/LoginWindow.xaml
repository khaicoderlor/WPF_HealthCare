<Window x:Class="InfertilityCare.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityCare"
        mc:Ignorable="d"
        Title="InfertilityCare - Login" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,30">
            <TextBlock Text="InfertilityCare" 
                     FontSize="24" 
                     FontWeight="Bold" 
                     Foreground="#FF2C3E50"
                     />
            <TextBlock Text="Login to your account" 
                     FontSize="14" 
                     Foreground="#FF7F8C8D"
                     HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Height="203">

            <!-- Username/Email -->
            <!-- Username/Email -->
            <!-- Username/Email -->
            <Label Content="Email:" 
                   FontWeight="SemiBold" Height="27"
                   />
            <TextBox x:Name="txtEmail"
                     Height="35"
                     Padding="10,8"
                     FontSize="14"
                     BorderBrush="#FFBDC3C7"
                     Margin="0,0,0,15"/>

            <!-- Password -->
            <Label Content="Password:" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword"
                         Height="35"
                         Padding="10,8"
                         FontSize="14"
                         BorderBrush="#FFBDC3C7"
                         Margin="0,0,0,15"/>

            <!-- Login Button -->
            <Button x:Name="LoginButton"
                    Content="Login"
                    Height="40"
                    Background="#FF3498DB"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,15"
                    Click="LoginButton_Click"/>


        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0"/>

    </Grid>
</Window>