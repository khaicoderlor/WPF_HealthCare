<Window x:Class="InfertilityCare.ProfileUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityCare"
        mc:Ignorable="d"
        Title="User profile" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Grid Background="#FAFAFA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="USER PROFILE" 
                   FontSize="22" FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   HorizontalAlignment="Center" 
                   Margin="0,10"/>

        <StackPanel Grid.Row="1" Margin="50,20,50,20" VerticalAlignment="Top" >
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="FullName:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFullName" Grid.Column="1" Margin="10,0"/>
            </Grid>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Date of birth:" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDOB" Grid.Column="1" Margin="10,0"/>
            </Grid>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Partient full name:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPartnerFullName" Grid.Column="1" Margin="10,0"/>
            </Grid>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Partient email:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPartnerEmail" Grid.Column="1" Margin="10,0"/>
            </Grid>

            <Button Content="Save profile" Width="120" Height="35" 
                    HorizontalAlignment="Right"
                    Click="BtnSave_Click"
                    Background="#2ECC71" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
