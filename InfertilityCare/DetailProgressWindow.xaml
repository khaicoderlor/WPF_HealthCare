<Window x:Class="InfertilityCare.DetailProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityCare"
        mc:Ignorable="d"
        Title="DetailProgressWindow" Height="600" Width="1000">
    <Canvas>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgOrderSteps"
  AutoGenerateColumns="False"
  CanUserAddRows="False"
  IsReadOnly="True"
  AlternatingRowBackground="#E3F2FD"
  HeadersVisibility="Column"
  RowHeight="40"
  ColumnHeaderHeight="40"
  FontSize="14"
  BorderBrush="#B0BEC5"
  BorderThickness="1" Height="284" Width="843" SelectionChanged="dgOrderSteps_SelectionChanged"  
  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Service" Binding="{Binding Service.Name}" Width="70"/>
                    <DataGridTextColumn Header="Patient" Binding="{Binding Patient.FullName}" Width="130"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                    <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="120"/>
                    <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="120"/>
                    <DataGridTextColumn Header="Frozen Storage" Binding="{Binding IsFrozen}" Width="120"/>
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <Label Content="Step" Canvas.Left="10" Canvas.Top="314" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtStep" Canvas.Left="92" Canvas.Top="318" HorizontalAlignment="Left" VerticalAlignment="Center" Width="259" RenderTransformOrigin="0.657,0.746"/>

        <Label Content="Content" Canvas.Left="10" Canvas.Top="345" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.553,2.012"/>
        <Label Content="IsPaid" Canvas.Left="10" Canvas.Top="431" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.811,0.004"/>
        <TextBox x:Name="txtContent" Canvas.Left="92" Canvas.Top="349" Width="258" RenderTransformOrigin="0.657,0.746" HorizontalAlignment="Left" VerticalAlignment="Top" Height="72" TextWrapping="Wrap"/>

        <TextBox x:Name="txtPaid" Canvas.Left="91" Canvas.Top="435" HorizontalAlignment="Left" VerticalAlignment="Top" Width="259" RenderTransformOrigin="0.657,0.746"/>

        <Button x:Name="btnMarkCompleted" Content="Complete" Canvas.Left="422" Canvas.Top="314" Height="31" Width="96" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnMarkCompleted_Click"/>

        <Button x:Name="btnAddEgg" Content="Add Egg" Canvas.Left="780" Canvas.Top="311" Height="31" Width="96" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnAddEgg_Click"/>

        <Button x:Name="btnAddEmbryo" Content="Add Embryo" Canvas.Left="780" Canvas.Top="544" Height="30" Width="108" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnAddEmbryo_Click" RenderTransformOrigin="0.795,1.646"/>

        <Button x:Name="btnAddAppointment" Content="Add Appointment" Canvas.Left="422" Canvas.Top="457" Height="31" Width="112" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnAddAppointment_Click"/>

        <Button x:Name="btnPaid" Content="Paid" Canvas.Left="422" Canvas.Top="358" Height="31" Width="96" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnPaid_Click"/>

        <Button x:Name="btnDetail" Content="Detail" Canvas.Left="422" Canvas.Top="406" Height="31" Width="96" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnDetail_Click"/>

        <Label Content="Total Amount" Canvas.Left="10" Canvas.Top="473" RenderTransformOrigin="0.811,0.004" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBox x:Name="txtTotalAmount" Canvas.Left="92" Canvas.Top="477" HorizontalAlignment="Center" VerticalAlignment="Top" Width="259" RenderTransformOrigin="0.657,0.746"/>

        <Label Content="Grade" Canvas.Left="603" Canvas.Top="314"/>
        <ComboBox x:Name="cbxEggGrade" Canvas.Left="650" Canvas.Top="316" HorizontalAlignment="Left" VerticalAlignment="Center" Width="108"/>

        <Label Content="Grade" Canvas.Left="603" Canvas.Top="314"/>
        <ComboBox x:Name="" Canvas.Left="780" Canvas.Top="475" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" RenderTransformOrigin="0.503,3.432"/>

        <Label Content="" Canvas.Left="565" Canvas.Top="353"/>
        <ComboBox Canvas.Left="780" Canvas.Top="426" Width="108" RenderTransformOrigin="0.503,3.432" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Grade" Canvas.Left="716" Canvas.Top="424" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.502,0.81"/>
        <Label Content="Egg" Canvas.Left="722" Canvas.Top="471" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Canvas>
</Window>
